{% extends "ChouetteCoopAdminBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}


{% block content %}
<br />
<br />
<div class="container bottom-buffer">
    <div class="row top-buffer bottom-buffer">
        {% if error %}
        <div class="col-md-6 col-md-offset-3">
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                Mot de passe et ou identifiant incorrect !
            </div>
        </div>
        {% endif %}
        <div class="col-md-4 col-md-offset-2">
            <div class="card">


                <h3>Connexion</h3>

                <form action="{{ path('fos_user_security_check') }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
                    <br />

                    <label for="password">Mot de passe</label>
                    <input type="password" class="form-control" id="password" name="_password" required="required" />

                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                   

                    <br />
                    <br />

                    <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="Connexion" />
                    <br />
                    <br />
                    {#<div class="row">
                    <div class="col-md-6">
                        <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié ?</a>
                    </div>
                    <div class="col-md-3 col-md-offset-2">
                        <a href="{{ path('user_utilisateur_registration') }}">Inscription</a>
                    </div>
                    </div>#}                                        
                </form>
                <br />
            </div>
        </div>
        
        <div class="col-md-4 col-md-offset-1">
            {#<div class="card">
                <div class="center">
                    <h3>Créer un compte</h3>
                </div>
                <br />
                <p class="justify">Vous n'avez pas encore de compte utilisateur ? Remplissez le formulaire d'inscription en moins de 5 minutes. </p>
                <br />
                <div class="center">
                    <a href="{{ path('fos_user_registration_register') }}" class="btn btn-primary">Créer mon compte</a>
                </div>
                <br />
                <br />
            </div>#}

        </div>
        
    </div>
</div>

{% endblock content %}

